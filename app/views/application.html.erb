<!DOCTYPE html>
<html>
  <head>
    <title>Furima32567</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="header">
    <div class="top-page-header">
      <h1 class="furima-icon"><a href="/">Furima</a></h1>
      <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          <%= link_to "投稿する", class: :nav__btn%>
        </div>
      <% else %>
        <div class="grid-6">
          <%= link_to "ログイン", new_user_session_path, class: "post" %>
          <%= link_to "新規投稿", new_user_registration_path, class: "post" %>
        </div>
      <% end %>
    </div>
  </header>
    <%= yield %>
  </body>
</html>
